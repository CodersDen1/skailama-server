{
  "version": "1.0.0",
  "description": "this is server created to handle the server logic for skailama assessment test",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run start",
    "start": "node dist/index.js",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
