{
  "version": "1.0.0",
  "description": "this is server created to handle the server logic for skailama assessment test",
  "main": "dist/index.js",
  "scripts": {
     "start": "node dist/index.js",
     "build": "tsc" ,
     "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "express": "^4.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
