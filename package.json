{
  "version": "1.0.0",
  "description": "this is server created to handle the server logic for skailama assessment test",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "prebuild": "npm install",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  }
}